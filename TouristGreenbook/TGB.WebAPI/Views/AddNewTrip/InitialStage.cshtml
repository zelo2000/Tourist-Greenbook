@{
    ViewData["Title"] = "Initial Stage";
}

<form action="/AddNewTrip/FinallStage" method="post">
    <label for="city">Місто в яке ви подорожуєте*</label>
    <br />
    <select name="city" required>
        @{
            foreach (var city in ViewBag.Cities)
            {
                <option>@city</option>
            }
        }
    </select>
    <br />
    <label for="startDate">Дата та час приїзду в місто*</label>
    <br />
    <input type="date" name="startDate"  required/>
    <input type="time" name="startTime"/>
    <br />
    <label for="finishDate">Дата та час відїзду з міста*</label>
    <br />
    <input type="date" name="finishDate" required/>
    <input type="time" name="finishTime"/>
    <br />
    <label for="budget">Орієнтовний бюджет на 1 день*</label>
    <br />
    <input type="number" name="budget" required/>
    <br />
    <label for="tags">Типи закладів які ви хочете відвідата*</label>
    <br />
    <select name="chosenTags" multiple="multiple" required>
        @{
            foreach (var tag in ViewBag.Tags)
            {
                <option>@tag</option>
            }
        }
    </select>
    <br />
    <input class="btn btn-light" type="submit" value="Submit" name="submit" />
</form>