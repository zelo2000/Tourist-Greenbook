@model ReflectionIT.Mvc.Paging.PagingList<TGB.WebAPI.Models.Place>
@using ReflectionIT.Mvc.Paging
@addTagHelper *, ReflectionIT.Mvc.Paging

@{
    ViewData["Title"] = "Index";
}

<h2>Place</h2>

<p>
    <a asp-area="" asp-controller="AddPlace" asp-action="AddingNewPlaceFromUser" class="btn btn-primary">Create new</a>
</p>

<form method="get" class="form-inline">
    <input name="filterName" class="form-control" placeholder="name"
           value="@Model.RouteValue["Filter"]" />
    <input name="filterType" class="form-control" placeholder="type"
           value="@Model.RouteValue["Filter"]" />
    <input name="filterCity" class="form-control" placeholder="city"
           value="@Model.RouteValue["Filter"]" />
    <input name="filterAddress" class="form-control" placeholder="address"
           value="@Model.RouteValue["Filter"]" />
    <button type="submit" class="btn btn-info">
        <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Search
    </button>
</form>

<nav aria-label="Suppliers navigation example">
    @await this.Component.InvokeAsync("Pager", new { pagingList = this.Model })
</nav>

<table class="table">
    <thead>
        <tr class="active">
            <th>
                @Html.SortableHeaderFor(model => model.Name, "Name", this.Model)
            </th>
            <th>
                @Html.SortableHeaderFor(model => model.Type, "Type", this.Model)
            </th>
            <th>
                @Html.SortableHeaderFor(model => model.City, "City", this.Model)
            </th>
            <th>
                @Html.SortableHeaderFor(model => model.Address, "Address", this.Model)
            </th>
            <th>
                @Html.SortableHeaderFor(model => model.WorkTimeStart, "WorkTimeStart", this.Model)
            </th>
            <th>
                @Html.SortableHeaderFor(model => model.WorkTimeFinish, "WorkTimeFinish", this.Model)
            </th>
            <th>
                @Html.SortableHeaderFor(model => model.State, "State", this.Model)
            </th>
            <th>
                @Html.SortableHeaderFor(model => model.Description, "Description", this.Model)
            </th>
            <th>
                @Html.SortableHeaderFor(model => model.Rating, "Rating", this.Model)
            </th>
            <th></th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="active">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkTimeStart)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkTimeFinish)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Suppliers navigation example">
    <vc:pager paging-list="@Model" />
</nav>

<div>
    <a asp-controller="Home" asp-action="AdminView" class="btn btn-default">Back to List</a>
</div>